{% extends 'base.html.twig' %}

{% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">{% endblock %}

{% block body %}
    <a href="{{ path('task_create') }}" class="btn btn-info text-light">Créer une tâche</a>
    <div class="row">
        {% for task in tasks %}
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div>
                <div class="border mt-4 p-2 pb-4">
                    <h4 class="float-end">
                        {% if task.isDone %}
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-lg" viewBox="0 0 16 16">
                                <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425a.247.247 0 0 1 .02-.022Z"/>
                            </svg>
                        {% else %}
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                                <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
                            </svg>
                        {% endif %}
                    </h4>
                    <h4>
                        <a href="{{ path('task_edit', {'id' : task.id }) }}"
                           class="fs-5 link-offset-2 link-underline link-underline-opacity-0"
                        >
                            {{ task.title }}
                        </a>
                    </h4>
                    <p>{{ task.content }}</p>
                </div>
                <div class="mt-2">                     
                    <a class="btn btn-success btn-sm float-end">
                        {% if not task.isDone %}
                            Marquer comme faite
                        {% else %}
                            Marquer non terminée
                        {% endif %}
                    </a>
                    <a class="btn btn-danger btn-sm float-end me-1">Supprimer</a>                
                </div>
            </div>
        </div>
        {% else %}
            <div class="alert alert-warning mt-3" role="alert">
                Il n'y a pas encore de tâche enregistrée. 
                <a href="{{ path('task_create') }}" class="btn btn-warning float-end text-light">Créer une tâche</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
